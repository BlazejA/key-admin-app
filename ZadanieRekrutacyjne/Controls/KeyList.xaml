<UserControl x:Class="ZadanieRekrutacyjne.KeyList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZadanieRekrutacyjne"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding IsSelected}" Margin="0,0,5,0"/>
            <TextBlock Text="Numer klucza: "/>
            <TextBlock Text="{Binding KeyNumber}"/>
            <TextBlock Text="Nazwa pomiesczenia: " Margin="10,0,0,0"/>
            <TextBlock Text="{Binding RoomName}"/>            
        </StackPanel>        
    </StackPanel>
</UserControl>
